<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影 -->
    <item>
        <shape>
            <solid android:color="#e4e9fc" />
            <corners android:radius="@dimen/shapeRadiusLarge" />
        </shape>
    </item>

    <!-- 前景 -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape>
            <gradient
                android:angle="0"
                android:endColor="#6f8bef"
                android:startColor="#88a2ff" />

            <corners android:radius="@dimen/shapeRadiusLarge" />
        </shape>
    </item>
</layer-list>
