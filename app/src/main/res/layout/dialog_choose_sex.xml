<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:divider="@drawable/rv_divider"
    android:orientation="vertical"
    android:showDividers="middle">

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_rect"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:text="@string/opinionFeedback"
        android:textColor="@color/txtSuperColor"
        android:textSize="@dimen/txt_small" />

    <TextView
        android:id="@+id/tv_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_rect"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:text="@string/opinionFeedback"
        android:textColor="@color/txtSuperColor"
        android:textSize="@dimen/txt_small" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/rv_divider_height"
        android:background="@drawable/rv_divider" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_rect"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:text="@string/cancel"
        android:textColor="@color/txtSuperColor"
        android:textSize="@dimen/txt_small" />

</LinearLayout>