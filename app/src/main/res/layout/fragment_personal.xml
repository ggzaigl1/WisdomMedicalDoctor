<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:background="@mipmap/person_header"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_header"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@mipmap/doctor" />

            <TextView
                android:id="@+id/tv_docName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_header"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_medium" />

            <TextView
                android:id="@+id/tv_professional"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_docName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="街道口妇幼保健院耳鼻喉专家"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_scheduling"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ripple_rect"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/scheduling"
                android:gravity="center"
                android:text="排班"
                android:textColor="@color/txtSuperColor"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/tv_suspend"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ripple_rect"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/stop"
                android:gravity="center"
                android:text="停诊"
                android:textColor="@color/txtSuperColor"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ripple_rect"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/charge"
                android:gravity="center"
                android:text="费用"
                android:textColor="@color/txtSuperColor"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/tv_gratuitous"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ripple_rect"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/yizhen"
                android:gravity="center"
                android:text="义诊"
                android:textColor="@color/txtSuperColor"
                android:textSize="@dimen/dp_14" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_perInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/ripple_rect"
            android:drawablePadding="@dimen/dp_30"
            android:drawableStart="@mipmap/gr"
            android:padding="@dimen/dp_15"
            android:text="个人资料"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="55dp"
            android:background="@color/lineColor" />

        <TextView
            android:id="@+id/tv_credential"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_rect"
            android:drawablePadding="@dimen/dp_30"
            android:drawableStart="@mipmap/credential"
            android:padding="@dimen/dp_15"
            android:text="证书管理"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="55dp"
            android:background="@color/lineColor" />

        <TextView
            android:id="@+id/tv_evaluate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_rect"
            android:drawablePadding="@dimen/dp_30"
            android:drawableStart="@mipmap/evaluate"
            android:padding="@dimen/dp_15"
            android:text="评价"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="55dp"
            android:background="@color/lineColor" />

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_rect"
            android:drawablePadding="@dimen/dp_32"
            android:drawableStart="@mipmap/sz"
            android:padding="@dimen/dp_15"
            android:text="设置"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="55dp"
            android:background="@color/lineColor" />

    </LinearLayout>

</ScrollView>