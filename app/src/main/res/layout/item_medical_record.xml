<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_margin="@dimen/dp_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_time"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_toRightOf="@+id/iv_time"
            android:text="图文咨询"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="2018-07-26"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/dp_14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_14">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_card"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/card" />

        <TextView
            android:id="@+id/tv_patName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_toRightOf="@+id/iv_card"
            android:text="张三"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_toRightOf="@+id/tv_patName"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="武汉街道口妇幼保健院"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="耳鼻喉科"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/dp_14" />

    </RelativeLayout>

    <View
        android:layout_marginRight="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="1px"
       android:layout_marginTop="@dimen/dp_24"
        android:background="@color/lineColor" />

</LinearLayout>