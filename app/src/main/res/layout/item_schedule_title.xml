<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16"
    android:background="@drawable/shape_shadow">

    <TextView
        android:id="@+id/tvDateTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="日期"
        android:textColor="#949ec2"
        android:textSize="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvMsg"/>

    <TextView
        android:id="@+id/tvMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dp_4"
        android:singleLine="true"
        android:textColor="#949ec2"
        android:textSize="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@id/tvDateTitle"
        app:layout_constraintRight_toLeftOf="@+id/tvVideo" />

    <TextView
        android:id="@+id/tvVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_8"
        android:singleLine="true"
        android:textColor="#949ec2"
        android:textSize="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@id/tvMsg"
        app:layout_constraintRight_toLeftOf="@+id/tvSoundRecording" />

    <TextView
        android:id="@+id/tvSoundRecording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dp_4"
        android:paddingLeft="@dimen/dp_8"
        android:singleLine="true"
        android:textColor="#949ec2"
        android:textSize="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@+id/tvVideo"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>